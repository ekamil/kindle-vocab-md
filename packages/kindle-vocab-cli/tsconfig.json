{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*", "src/templates/*.njk"],
  "exclude": ["node_modules", "dist"],
  "forceConsistentCasingInFileNames": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
